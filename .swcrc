{
	"$schema": "https://swc.rs/schema.json",
	"jsc": {
		"parser": {
			"syntax": "typescript",
			"tsx": false,
			"dynamicImport": true,
			"decorators": true
		},
		"target": "es2022",
		"baseUrl": "./",
		"loose": true,
		"externalHelpers": true,
		"keepClassNames": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true
		}
	},
	"module": {
		"type": "commonjs",
		"strict": true,
		"strictMode": true,
		"noInterop": false,
		"lazy": false
	},
	"minify": true
}

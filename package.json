{
	"name": "trakto-be-challenge",
	"version": "1.0.0",
	"author": "Matheus Torres <matheustrres.rj@gmail.com>",
	"description": "",
	"private": true,
	"license": "MIT",
	"scripts": {
		"docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
		"docker:prod": "docker compose up --build",
		"prebuild": "rm -rf dist",
		"build": "nest build -p ./tsconfig.build.json -c ./nest-cli.json -b swc",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"lint": "eslint \"{src,tests}/**/*.ts\" --fix",
		"precommit": "lint-staged",
		"prepush": "test",
		"prestart": "rm -rf dist && pnpm build",
		"prepare": "husky install",
		"start": "dotenv -e .env -- nest start",
		"start:dev": "dotenv -e .env -- nest start --watch",
		"start:prod": "node --env-file=.env ./dist/main",
		"test": "glob -c \"node --env-file=.env.test --import tsx --no-warnings --test\" \"./tests/**/*.{spec,test}.ts\""
	},
	"dependencies": {
		"@nestjs/common": "^10.0.0",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.0.0",
		"@nestjs/mongoose": "^10.0.10",
		"@nestjs/platform-express": "^10.0.0",
		"@swc/helpers": "^0.5.17",
		"mongoose": "^8.5.2",
		"multer": "1.4.5-lts.1",
		"nestjs-pino": "^4.4.0",
		"pino": "^9.6.0",
		"pino-http": "^10.4.0",
		"pino-pretty": "^13.0.0",
		"sharp": "^0.33.4",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@swc/cli": "^0.3.14",
		"@swc/core": "^1.11.24",
		"@swc/jest": "^0.2.36",
		"@tsconfig/node-lts": "^20.1.3",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.3.1",
		"@typescript-eslint/eslint-plugin": "^8.32.0",
		"@typescript-eslint/parser": "^8.32.0",
		"dotenv-cli": "^7.4.2",
		"eslint": "8.57.1",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"husky": "^8.0.0",
		"jest": "^29.5.0",
		"lint-staged": "^15.2.11",
		"prettier": "^3.0.0",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	},
	"packageManager": "pnpm@9.3.0+sha512.ee7b93e0c2bd11409c6424f92b866f31d3ea1bef5fbe47d3c7500cdc3c9668833d2e55681ad66df5b640c61fa9dc25d546efa54d76d7f8bf54b13614ac293631"
}
